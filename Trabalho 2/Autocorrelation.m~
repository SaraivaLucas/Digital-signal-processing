clc; close all;clear all;  %#ok<CLSCR>
%% Parâmetros do sinal 
N=1000;                                 % Número de amostras
n=0:N-1;                                % Números de índice de amostra
Tau=0:N-1;                              % Definição de TAU
mu=0;                                   % Média do sinal
var=0.5;                                % Variância
L=5000;                                 % Número de blocos
AWGN= mu+var*randn(1,N*L);              % Geração do ruido

%% Cálculo da Autocorrelação Unilateral
Rxx=zeros(1,N*L);                       % Cria vetor da autocorrelação
    for Tau= 1 :N+1
        for n=1: N-Tau+1
            Rxx(Tau)=Rxx(Tau)+AWGN(n)*AWGN(n+Tau-1);
        end;
    end;

Eixo_atrasos=0:N-1;      
Rxx=Rxx/N;
plot(Eixo_atrasos,Rxx)

